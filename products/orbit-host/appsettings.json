{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Debug",
      "OrbitMesh": "Information"
    }
  },
  "ConnectionStrings": {
    "OrbitMesh": "Data Source=orbitmesh.db"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      }
    }
  },
  "ORBITMESH_ADMIN_PASSWORD": "admin",
  "OrbitMesh": {
    "Server": {
      "MaxAgents": 1000,
      "HeartbeatInterval": 30,
      "JobTimeout": 300,
      "RequireAuthentication": false
    },
    "FileStorage": {
      "RootPath": "./files",
      "MaxFileSize": 104857600
    },
    "Swagger": {
      "Enabled": true
    },
    "Features": {
      "FileSync": {
        "Enabled": false,
        "RootPath": "./files",
        "WatchEnabled": false,
        "WatchPattern": "*",
        "DebounceMs": 500,
        "SyncMode": "TwoWay"
      },
      "HealthMonitor": {
        "Enabled": false,
        "Interval": "5m",
        "AgentPattern": "*",
        "AutoRestart": false
      },
      "ServiceManagement": {
        "Enabled": false,
        "Services": []
      },
      "DataCollection": {
        "Enabled": false,
        "Inventory": {
          "Enabled": false,
          "Interval": "24h",
          "AgentPattern": "*"
        },
        "Metrics": {
          "Enabled": false,
          "Interval": "1m",
          "AgentPattern": "*",
          "CpuAlertThreshold": 80,
          "MemoryAlertThreshold": 85,
          "DiskAlertThreshold": 90
        },
        "Logs": {
          "Enabled": false,
          "Paths": ["/var/log/*.log"],
          "LinesPerLog": 100
        }
      },
      "ScriptExecution": {
        "Enabled": false,
        "DefaultTimeout": 300,
        "AllowRemoteExec": true,
        "AllowScriptDeploy": true
      },
      "Monitoring": {
        "Enabled": false,
        "DiskSpace": {
          "Enabled": false,
          "Interval": "15m",
          "WarningThreshold": 80,
          "CriticalThreshold": 90
        },
        "Process": {
          "Enabled": false,
          "Interval": "2m",
          "Processes": [],
          "CpuThreshold": 80,
          "MemoryThreshold": 80
        },
        "Connectivity": {
          "Enabled": false,
          "Interval": "10m",
          "Endpoints": [],
          "TimeoutSeconds": 10
        }
      },
      "Deployment": {
        "Enabled": false,
        "DefaultStrategy": "rolling",
        "HealthCheckCommand": null,
        "RollbackOnFailure": true,
        "CanaryPercentage": 10
      },
      "Maintenance": {
        "Enabled": false,
        "Cleanup": {
          "Enabled": false,
          "Interval": "24h",
          "Paths": ["/tmp", "/var/tmp"],
          "OlderThanDays": 7
        },
        "LogRotation": {
          "Enabled": false,
          "Interval": "24h",
          "Paths": ["/var/log/*.log"],
          "MaxSizeMb": 100,
          "KeepRotations": 5,
          "Compress": true
        }
      }
    }
  }
}
