{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Debug",
      "OrbitMesh": "Information"
    }
  },
  "ConnectionStrings": {
    "OrbitMesh": "Data Source=orbitmesh.db"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      }
    }
  },
  "OrbitMesh": {
    "Server": {
      "MaxAgents": 1000,
      "HeartbeatInterval": 30,
      "JobTimeout": 300,
      "RequireAuthentication": false
    },
    "FileStorage": {
      "RootPath": "./files",
      "MaxFileSize": 104857600
    },
    "Swagger": {
      "Enabled": true
    }
  }
}
